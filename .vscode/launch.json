    "version": "0.2.0",
    "configurations": [
        {
            "name": "Celery Workers",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.venv",
            "args": ["-A", "myTPV","worker" , "-l", "info","--pool","solo"]
        },
        {
            "name": "Celery Beat",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.venv",
            "args": ["-A", "myTPV","beat" , "-l", "info"]
        },
        {
            "name": "Run Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py",
            "justMyCode": false
        },
        {
            "name": "Make migrations",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "makemigrations",
                "myTPV"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py"
        },
        {
            "name": "Migrate",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "migrate"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py"
        }
    ],
    "compounds": [
        {
          "name": "Run Django+Celery+Beat",
          "configurations": ["Run Django","Celery Workers", "Celery Beat"],
          "stopAll": true
        }
      ]
}